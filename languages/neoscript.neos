{
    meta : {
        language: "neoscript"
        description: "Default neoGFX scripting language; similar to Ada"
        copyright: "Copyright (C) 2019 Leigh Johnston"
        version: "1.0.0"
    }

    libraries: [
        neos.math
        neos.string
        neos.io
        neos.gc
        i42.magic
    ]

    expect: comment
    expect: with
    expect: use
    expect: package

    tokens : {
        ' ': whitespace
        character.LF: whitespace
        character.CR: whitespace
        character.TAB: whitespace
        character.EOF: whitespace
        '-' : {
            '-': comment
        }
        character.alpha: keyword
        character.underscore: keyword
    }

    identifier: {
        emit object.reference
        tokens: {
            character.alpha: identifier
            character.digit: identifier
            character.underscore: identifier
            whitespace: emit
        }
    }

    keyword : {
        tokens : {
            character.alpha: keyword
            whitespace: emit
        }
        "with": with
        "use": use
        "package": package
        "body": body
        "is": is
        "function": function
        "begin": begin
        "end": end
        "for": for
        "loop": loop
        "while": while
        "return": return
    }

    with : {
        expect: engine.module.package.name
        tokens : {
            whitespace: whitespace
            ';': engine.module.import
        }
    }

    use: {
        expect: engine.module.package.name
        tokens: {
            whitespace: whitespace
            ';': engine.module.instantiate
        }
    }

    operand: {
        tokens: {
            character.digit: integer
            '\"': string
            identifier: identifier
        }
    }

    expression: {
        tokens: {
            operand: operand
            '-': object.operator.negate
            '(': {
                new
                ')': emit
            }
        }
        object: {
            tokens {
                '=': object.operator.equality
                ':': {
                    '=': object.operator.assignment
                }
                '+': math.operator.addition
                '-': math.operator.subtraction
                '*': math.operator.multiplication
                '/': math.operator.division
            }
        }
    }

    integer: {
        emit: object.integer64
        tokens: {
            character.digit: integer
            '.': float
            whitespace: emit
            character: next
        }
    }

    float: {
        emit: object.float64
        tokens: {
            character.digit: float
            whitespace: emit
            character: next
        }
    }

    package.name: {
        emit: engine.module.package.name
        tokens: {
            character.alpha: package.name
            package.name: {
                character.alpha: package.name
                character.digit: package.name
                character.underscore: package.name
                character.underscore: {
                    character.alpha: package.name
                }
                character.period: package.name
                character.period: {
                    character.alpha: package.name
                }
                whitespace: emit
                character: next
            }
        }
    }

    comment : {
        tokens : {
            character.LF: emit
            character : whitespace
        }
    }

    string: {
        emit: object.string
        tokens: {
            '\"': emit
            '\\': escape
            character: string
        }
        escape: {
            tokens: {
                '\"': character.quote
                'n': character.LF
                'r': character.CR
                't': character.TAB
                'u': unicode1
                character: string
                unicode1: {
                    character.hexdigit: unicode2
                    unicode2: {
                        character.hexdigit: unicode3
                        unicode3: {
                            character.hexdigit: unicode4
                            unicode4: {
                                character.hexdigit: code_unit
                                code_unit: {
                                    make.character.utf16: [ unicode1, unicode2, unicode3, unicode4 ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}