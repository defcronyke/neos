{
    meta: {
        language: "neoscript"
        description: "Default neoGFX scripting language"
        sourcecode.file.extension: [ "neo" ]
        copyright: "Copyright (C) 2019 Leigh Johnston"
        version: "1.0.0"
    }

    libraries: [
        neos.core
        neos.math.universal
    ]

    expect: whitespace
    expect: comment
    expect: keyword

    package: {
        name: {
            is: module.package.name
            tokens: {
                character.alpha: string
                string: {
                    character.alpha: string
                    '.': string
                    default: next
                }
            }
        }
    }

    character: {
        is: string.utf8.character
    }

    whitespace: {
        is: language.whitespace
        tokens: {
            ' ': done
            character.LF: done
            character.CR: done
            character.TAB: done
            default: error
        }
    }

    comment: {
        is: language.comment
        is: language.whitespace
        tokens: {
            '-': {
                '-': {
                    character.LF: done
                    default: ignore
                }
            }
        }
    }

    keyword: {
        is: language.keyword
        candidate: {
            is: string.utf8
            tokens: {
                character.alpha: continue
                default: next
            }
        }
        tokens: {
            candidate: {
                "using": using
                "import": import
                "def": def
                "fn": fn
                "proc": proc
                "if": if
                "else": else
                "return": return
                language.keyword: done
            }
        }
        using: {
            is: language.keyword
            tokens: {
                package.name: module.package.import
                module.package.import: module.package.instantiate
                module.package.instantiate: {
                    expect: statement.end
                    statement.end: drain
                }
                whitespace: ignore
            }
        }
        import: { is: language.keyword }
        def: { is: language.keyword }
        fn: { is: language.keyword }
        proc: { is: language.keyword }
        if: { is: language.keyword }
        else: { is: language.keyword }
        return: { is: language.keyword }
    }

    statement: {
        is: language.statement
        expect: end
        expect: expression
        tokens: {
            expression: {
                expect: end
            }
            whitespace: ignore
        }
        end: {
            tokens: {
                ';': done
                whitespace: ignore
            }
        }
    }

    expression: {
        is: math.expression
        expect: term
        tokens: {
            term: {
                '+': math.operator.addition
                '-': math.operator.subtraction
                math.operator: {
                    expect: term
                    whitespace: ignore
                }
                whitespace: ignore
                default: next
            }
        }
        term: {
            expect: term2
            tokens: {
                term2: {
                    '*': math.operator.multiplication
                    '/': math.operator.division
                    math.operator: {
                        expect: term2
                        whitespace: ignore
                    }
                    whitespace: ignore
                    default: next
                }
            }
        }
        term2: {
            expect: primary
            tokens: {
                primary: {
                    '**': math.operator.power
                    '^': math.operator.power
                    math.operator: {
                        expect: primary
                        primary: done
                        whitespace: ignore
                    }
                    whitespace: ignore
                    default: next
                }
            }
        }
        primary: {
            is: math.expression.operand
            tokens: {
                math.universal.number.digit: universal_number
                universal_number: done
                '-': math.operator.negate
                math.operator.negate: {
                    expect: primary
                    primary: done
                    whitespace: ignore
                }
                '(': {
                    expect: expression
                    expression: {
                        expect: ')'
                        ')': done
                        whitespace: ignore
                    }
                    whitespace: ignore
                }
                whitespace: ignore
            }
        }
    }

    universal_number: {
        is: math.universal.number
        tokens: {
            digit: {
                digit: continue
                '.': point
                point: {
                    '.': error
                    digit: continue
                    'e': exponent
                    'E': exponent
                    default: next
                }
                default: next
            }
            '#': base
            base: {
                hexdigit: continue
                '.': point
                point: {
                    '.': error
                    hexdigit: continue
                    '#': {
                        'e': exponent
                        'E': exponent
                        default: next
                    }
                    default: next
                }
                '#': {
                    'e': exponent
                    'E': exponent
                    default: next
                }
            }
            exponent: {
                '+': exponent.positive
                exponent.positive: {
                    digit: exponent.digit
                    exponent.digit: {
                        digit: exponent.digit
                        exponent.digit: continue
                        default: next
                    }
                }
                '-': exponent.negative
                exponent.negative: {
                    digit: exponent.digit
                    exponent.digit: {
                        digit: exponent.digit
                        exponent.digit: continue
                        default: next
                    }
                }
            }
        }
    }
}