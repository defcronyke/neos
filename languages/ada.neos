{
    meta : {
        language: "Ada"
        description: "Ada (initially a subset of standard Ada, standard/scope TBD)"
        sourcecode.file.extension: [ "adb", "ads", "ada" ]
        copyright: "Copyright (C) 2019 Leigh Johnston"
        version: "1.0.0"
    }

    libraries: [
        neos.math
        neos.string
        neos.io
        neos.gc
        i42.magic
    ]

    expect: comment
    expect: with
    expect: use
    expect: package

    tokens : {
        ' ': whitespace
        character.LF: whitespace
        character.CR: whitespace
        character.TAB: whitespace
        character.EOF: whitespace
        '-' : {
            '-': comment
        }
        character.alpha: keyword
        character.underscore: keyword
    }

    keyword: {
        tokens: {
            character.alpha: keyword
            whitespace: emit
        }
        "with": with
        "use": use
        "package": package
        "body": body
        "is": is
        "function": function
        "begin": begin
        "end": end
        "for": for
        "loop": loop
        "while": while
        "return": return
        "pragma": pragma
    }

    pragma: {
        language.identifier: {
            "Import": Import
            "Export": Export
        }
        Import: {
            expect: [ '(', language.identifier, ',', language.identifier, ',', string, ')' ]
            language.identifier.1: {
                "neos": {
                    emit: language.external.function.import
                    language.identifier.2: language.function.name
                    language.function.name: {
                        emit: this
                        string.1: language.external.function.name
                        language.external.function.name: {
                            emit: this
                        }
                    }
                }
            }
        }
        Export: {
            emit: language.error.not_implemented
        }
    }

    with : {
        expect: module.package.name
        tokens : {
            whitespace: whitespace
            ';': module.import
        }
    }

    use: {
        expect: module.package.name
        tokens: {
            whitespace: whitespace
            ';': module.instantiate
        }
    }

    operand: {
        tokens: {
            character.digit: integer
            '\"': string
            identifier: identifier
        }
    }

    expression: {
        tokens: {
            operand: operand
            '-': object.operator.negate
            '(': subexpression
        }
        object: {
            tokens: {
                '=': object.operator.equality
                ':': {
                    '=': object.operator.assignment
                }
                '+': math.operator.addition
                '-': math.operator.subtraction
                '*': math.operator.multiplication
                '/': math.operator.division
            }
        }
    }

    subexpression: {
        is: expression
        tokens: {
            ')': emit
        }
    }

    identifier: {
        emit: language.identifier
        tokens: {
            character.alpha: identifier
            character.digit: identifier
            character.underscore: identifier
            whitespace: emit
        }
    }

    integer: {
        emit: object.integer64
        tokens: {
            character.digit: integer
            '.': float
            whitespace: emit
            character: next.emit
        }
    }

    float: {
        emit: object.float64
        tokens: {
            character.digit: float
            whitespace: emit
            character: next.emit
        }
    }

    package.name: {
        emit: module.package.name
        tokens: {
            character.alpha: package.name
            package.name: {
                character.alpha: package.name
                character.digit: package.name
                character.underscore: package.name
                character.underscore: {
                    character.alpha: package.name
                }
                character.period: package.name
                character.period: {
                    character.alpha: package.name
                }
                whitespace: emit
                character: next.emit
            }
        }
    }

    comment: {
        emit: whitespace
        tokens: {
            character.LF: emit
            character: whitespace
        }
    }

    string: {
        emit: object.string
        tokens: {
            '\"': emit
            '\\': escape
            character: string
        }
        escape: {
            tokens: {
                '\"': character.quote
                'n': character.LF
                'r': character.CR
                't': character.TAB
                'u': unicode1
                character: string
                unicode1: {
                    character.hexdigit: unicode2
                    unicode2: {
                        character.hexdigit: unicode3
                        unicode3: {
                            character.hexdigit: unicode4
                            unicode4: {
                                character.hexdigit: code_unit
                                code_unit: {
                                    make.character.utf16: [ unicode1, unicode2, unicode3, unicode4 ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}